# Media Storage Configuration
MEDIA_STORAGE_TYPE=local
# Options: local, s3, gcs, azure
MEDIA_UPLOAD_PATH=./uploads
MEDIA_MAX_SIZE=52428800
# 50MB in bytes
MEDIA_ALLOWED_TYPES=image/jpeg,image/png,image/gif,video/mp4,audio/mpeg,application/pdf

# AWS S3 Configuration (if MEDIA_STORAGE_TYPE=s3)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1
AWS_S3_ACL=public-read

# Google Cloud Storage (if MEDIA_STORAGE_TYPE=gcs)
GCS_PROJECT_ID=your-gcs-project-id
GCS_BUCKET=your-gcs-bucket-name
GCS_KEYFILE=./path/to/keyfile.json

# Azure Blob Storage (if MEDIA_STORAGE_TYPE=azure)
AZURE_STORAGE_ACCOUNT=your-storage-account
AZURE_STORAGE_KEY=your-storage-key
AZURE_STORAGE_CONTAINER=your-container-name

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
# 1 minute
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Webhook Configuration
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=1000
# Initial delay in ms
WEBHOOK_TIMEOUT=10000
# 10 seconds
WEBHOOK_SECRET=your-webhook-secret-for-signature-verification

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
# Comma-separated for multiple origins
CORS_CREDENTIALS=true

# Email Configuration (for password reset, notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
# true for 465, false for other ports
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourplatform.com
EMAIL_FROM_NAME=WhatsApp API Platform

# OAuth Configuration (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:3000/api/auth/github/callback

# Logging Configuration
LOG_LEVEL=info
# Options: error, warn, info, http, verbose, debug, silly
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14d

# Session Configuration
SESSION_SECRET=your-session-secret-change-this-in-production
SESSION_MAX_AGE=86400000
# 24 hours in ms

# Queue Configuration (Bull)
QUEUE_REDIS_URL=redis://localhost:6379
QUEUE_CONCURRENCY=5

# Monitoring & Analytics
ENABLE_METRICS=true
METRICS_PORT=9090

# Security
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME=900000
# 15 minutes in ms

# AI Integration Placeholders (for future use)
AI_SERVICE_URL=http://localhost:5000
AI_API_KEY=your-ai-service-api-key
AI_ENABLE_AUTO_REPLY=false
AI_ENABLE_SENTIMENT_ANALYSIS=false
AI_ENABLE_SPAM_DETECTION=false

# Feature Flags
ENABLE_WEBHOOKS=true
ENABLE_OAUTH=false
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR_AUTH=false

# Admin Configuration
ADMIN_EMAIL=admin@yourplatform.com
ADMIN_PASSWORD=change-this-secure-password

