  "repository": {
    "type": "git",
    "url": "https://github.com/apple00071/whatsapp_flow.git"
  },
  "homepage": "https://github.com/apple00071/whatsapp_flow#readme",
  "bugs": {
    "url": "https://github.com/apple00071/whatsapp_flow/issues"
  }
}
